<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="156dp"
        android:layout_height="69dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="385dp"
        android:layout_height="49dp"
        android:layout_below="@+id/imageView7"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-medium"
        android:text="Enjoy the trip with"
        android:textColor="#AB000000"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:text="Good Moments"
        android:textColor="#BE03A9F4"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="381dp"
        android:layout_height="49dp"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:gravity="top"
        android:text="@string/travel"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView21"
        android:layout_alignParentBottom="true"
        android:background="@drawable/avt_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/imageView12"
        android:layout_marginTop="366dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button_3"
        android:fontFamily="sans-serif-medium"
        android:text="Go"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:textStyle="bold" />
</RelativeLayout>