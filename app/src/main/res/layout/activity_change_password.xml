<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/home_bg">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/d_qlai"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:contentDescription="@string/app_name"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textViewlogin"
            android:layout_width="0dp"
            android:layout_weight="5.9"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu mới của bạn"
            android:textSize="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="serif"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dmk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Nhập mật khẩu mới"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/show_password"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_alignEnd="@+id/dmk"
                android:layout_alignBottom="@+id/dmk"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/change_mk"
            android:layout_width="310dp"
            android:layout_height="52dp"
            android:background="@drawable/custom_buttom_2"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"/>
    </LinearLayout>



</LinearLayout>