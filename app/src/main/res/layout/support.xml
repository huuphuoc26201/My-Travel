<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/round_border1"
                android:drawableLeft="@drawable/ic_baseline_person"
                android:drawablePadding="15dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="17dp"
                android:textColor="@color/black"
                android:textColorHint="#B3000000"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="16dp" />


            <EditText
                android:id="@+id/edtphone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/round_border1"
                android:drawableLeft="@drawable/ic_baseline_person"
                android:drawablePadding="15dp"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="17dp"
                android:textColor="@color/black"
                android:textColorHint="#AD000000"
                app:layout_constraintTop_toBottomOf="@+id/editname"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/round_border1"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="17dp"
                android:textColor="@color/black"
                android:textColorHint="#AE000000"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edtphone" />

            <TextView
                android:id="@+id/edtidtour"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/round_border1"
                android:drawableLeft="@drawable/ic_baseline_badge_24"
                android:drawablePadding="15dp"
                android:padding="17dp"
                android:text="Id"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edtemail"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/edtstkmomo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/round_border1"
                android:drawableLeft="@drawable/ic_baseline_add_card_24"
                android:drawablePadding="15dp"
                android:hint="Momo"
                android:inputType="number"
                android:padding="17dp"
                android:textColor="@color/black"
                android:textColorHint="#B4000000"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edtidtour"
                tools:layout_editor_absoluteX="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>